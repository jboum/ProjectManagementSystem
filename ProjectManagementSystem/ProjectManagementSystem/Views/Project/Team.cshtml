@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}

<h2>Team</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
    </tr>
    <tr>
        <td>Bob Default</td>
        <td>bdefault@example.com</td>
        <td>555-555-5555</td>
    </tr>
</table>
<hr />
<form class="form-horizontal" role="form">
    <h3>Add a Team Member</h3>
    <div class="form-group">
        <label for="MemberName" class="col-sm-2 control-label">Name:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="MemberName" id="MemberName" />
        </div>
    </div>
    <div class="form-group">
        <label for="MemberEmail" class="col-sm-2 control-label">Email:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="MemberEmail" id="MemberEmail" />
        </div>
    </div>
    <div class="form-group">
        <label for="MemberPhone" class="col-sm-2 control-label">Phone:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" name="MemberPhone" id="MemberPhone" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 col-sm-offset-1">
            <button type="submit" class="form-control" name="SubmitAdd">Add</button>
        </div>
    </div>
</form>
<hr />
<form class="form-horizontal" role="form">
    <h3>Delete a Team Member</h3>
    <div class="form-group">
        <label for="MemberDeleted" class="col-sm-2 control-label">Member:</label>
        <div class="col-sm-4">
            <select class="form-control" id="MemberDeleted" name="MemberDeleted">
                <option value="1">Member 1</option>
                <option value="2">Member 2</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 col-sm-offset-1">
            <button type="submit" class="form-control" name="SubmitDelete">Delete</button>
        </div>
    </div>
</form>