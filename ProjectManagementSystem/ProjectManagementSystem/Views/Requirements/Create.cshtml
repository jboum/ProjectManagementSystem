
@{
    ViewBag.Title = "Create a Requirement";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}

@section SectionNav {
    @Html.Partial("_RequirementsNavbar")
}

@using(Html.BeginForm("Create", "Requirements", new { id = ViewBag.ProjectId }, FormMethod.Post, new { @class = "form-horizontal" })) {
    <h3>Create a Requirement</h3>
    <div class="form-group">
        <label for="RequirementNumber" class="col-sm-2 control-label">Number:</label>
        <div class="col-sm-1">
            <input type="text" class="form-control" name="RequirementNumber" id="RequirementNumber" />
        </div>
    </div>
    <div class="form-group">
        <label for="RequirementDescription" class="control-label col-sm-2">Requirement:</label>
        <div class="col-sm-8">
            <textarea class="form-control" id="RequirementDescription" name="RequirementDescription" rows="8"></textarea>
        </div>
    </div>
    <div class="col-sm-offset-2">
        <div class="radio">
            <label>
                @Html.RadioButton("RequirementType", "Functional", true, null)
                Functional Requirement
            </label>
        </div>
        <div class="radio">
            <label>
                @Html.RadioButton("RequirementType", "Nonunctional", false, null)
                Nonfunctional Requirement
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 col-sm-offset-1">
            <button type="submit" class="form-control" name="SubmitAdd">Create</button>
        </div>
    </div>
}